<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="start"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <TextView
        android:id="@+id/tv_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_teal"
        android:fontFamily="@font/best_school"
        android:lineSpacingExtra="-40dp"
        android:paddingStart="25dp"
        android:paddingTop="12dp"
        android:paddingEnd="25dp"
        android:shadowColor="@color/shadow_grey"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="3"
        android:text="@string/nav_headerText"
        android:textColor="@color/black"
        android:textSize="85dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_searchHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoSizeMinTextSize="20dp"
        android:autoSizeTextType="uniform"
        android:background="@color/dark_teal"
        android:fontFamily="@font/best_school"
        android:paddingStart="25dp"
        android:paddingTop="8dp"
        android:paddingEnd="25dp"
        android:shadowColor="@color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="3"
        android:text="@string/nav_searchHeaderText"
        android:textColor="@color/light_teal"
        android:textSize="55dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_header"/>

    <ImageView
        android:id="@+id/iv_logo"
        android:src="@drawable/ic_icon_withshadow"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:scaleType="centerInside"
        android:layout_marginBottom="67dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_searchHeader"
        app:layout_constraintEnd_toEndOf="@+id/tv_header" />
</androidx.constraintlayout.widget.ConstraintLayout>